<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        
        <Authors>QuantumDev</Authors>
        <Version>$(StellarSdkVersion)</Version>
        <AssemblyVersion>$(StellarSdkVersion)</AssemblyVersion>

        <IsPackable>false</IsPackable>

        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    </PropertyGroup>

    <ItemGroup>
        <!-- Kernel package -->
        <PackageReference Include="Stellar.Kernel" Version="0.1.0"
                          PrivateAssets="all"/>
    </ItemGroup>

    <ItemGroup>
        <!-- standard MSBuild-->
        <PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.0.0"
                          PrivateAssets="all"/>
        <PackageReference Include="Microsoft.Build.Framework" Version="17.9.5"
                          PrivateAssets="all"/>

        <!-- tasks -->
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3"
                          PrivateAssets="all"/>
        <PackageReference Include="Glob" Version="1.1.9"
                          PrivateAssets="all"/>
        <PackageReference Include="Microsoft.NET.HostModel" Version="3.0.0"
                          PrivateAssets="all"/>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.8.0"
                          PrivateAssets="all"/>
    </ItemGroup>
</Project>
