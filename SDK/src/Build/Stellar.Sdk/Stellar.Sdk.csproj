<Project Sdk="Microsoft.NET.Sdk">
    <!-- Versions -->
    <Import Project="..\..\..\..\Data\version.props"/>

    <!-- Workload Setup Targets -->
    <Import Project="WorkloadSetup.targets"
            Condition="'$(IsPacking)' == 'true'"/>

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        
        <Authors>QuantumDev</Authors>
        <Version>$(StelalrSdkVersion)</Version>
        <AssemblyVersion>$(StelalrSdkVersion)</AssemblyVersion>

        <IsPackable>true</IsPackable>
        <PackageId>Stellar.Sdk</PackageId>
        <Description>StellarEngine SDK</Description>
        <PackageVersion>$(Version)</PackageVersion>

        <DevelopmentDependency>true</DevelopmentDependency>
        
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <IncludeReferencedProjects>true</IncludeReferencedProjects>
    </PropertyGroup>

    <ItemGroup>
        <!-- sdk deps -->
        <None Include="Stellar.Sdk.props" Pack="true" PackagePath="buildTransitive/"/>
        <None Include="Stellar.Sdk.targets" Pack="true" PackagePath="buildTransitive/"/>
    </ItemGroup>

    <ItemGroup>
        <!-- copying -->
        <None Include="..\Stellar.Sdk.Tasks\bin\Release\netstandard2.0\Stellar.Sdk.Tasks.dll"
              Pack="true" PackagePath="lib/netstandard2.0/"/>
    </ItemGroup>
</Project>
